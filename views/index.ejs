<%- include('./partials/header') %>

<div class="mt-3">
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <colgroup>
        <col style="width: 5%;">
        <col style="width: 20%;">
        <col style="width: 20%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 20%;">
        <col style="width: 15%;">
      </colgroup>
      <thead>
        <tr>
          <th>ID</th>
          <th>Categoria</th>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Delivery</th>
          <th>Descripcion</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% platos.forEach(plato => { %>
        <tr>
          <td><%= plato.idplato %></td>
          <td><%= plato.categoria %></td>
          <td><%= plato.nombre %></td>
          <td><%= plato.precio %></td>
          <td><%= plato.delivery %></td>
          <td><%= plato.delivery %></td>
          <td>
            <a href="#" class="btn btn-sm btn-danger">Eliminar</a>
            <a href="#" class="btn btn-sm btn-info">Editar</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('./partials/footer') %>
